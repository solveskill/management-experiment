datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  name                String?
  phone               String?
  salt                String
  hashedPassword      String
  resetToken          String?
  resetTokenExpiredAt String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime?
  deletedAt           DateTime?
}

model Customer {
  id Int @id @default(autoincrement())
}
